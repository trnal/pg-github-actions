
<h1>Simple Calculator</h1>

<%= form_with url: calculator_compute_path, method: :post, local: true do %>
  <div>
    <label for="a">First number</label>
    <%= number_field_tag :a, nil, step: "any", required: true %>
  </div>

  <div>
    <label for="b">Second number</label>
    <%= number_field_tag :b, nil, step: "any", required: true %>
  </div>

  <div>
    <label>Operation</label>
    <%= select_tag :operation,
      options_for_select([["Add", "add"], ["Subtract", "subtract"], ["Multiply", "multiply"], ["Divide", "divide"]]),
      required: true %>
  </div>

  <div>
    <%= submit_tag "Compute" %>
  </div>
<% end %>
